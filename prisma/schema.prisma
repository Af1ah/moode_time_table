// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Settings {
  idKey         String    @id @default("global")
  periodsPerDay Int       @default(8)
  semesterStart DateTime?
  semesterEnd   DateTime?
  workingDays   String    @default("1,2,3,4,5") // Mon-Fri
}

model MasterSchedule {
  id          String  @id @default(uuid())
  dayOfWeek   Int // 1=Mon, 5=Fri
  periodIndex Int // 0-indexed (0 to 7)
  courseId    Int // Moodle Course ID
  courseName  String // Cached name for display
  isLocked    Boolean @default(false)
  cohortId    Int // Moodle Cohort ID
  cohortName  String // Cached name

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([dayOfWeek, periodIndex, cohortId]) // No double booking for the same cohort
}

model SubjectConstraint {
  id              String  @id @default(uuid())
  courseId        Int
  courseName      String
  cohortId        Int
  requiredHours   Int     @default(0)
  preferredDays   String? // "1,3,5"
  blockedPeriods  String? // "0,7"
  consecutiveHours Int    @default(1) // e.g. 2 for labs

  @@unique([courseId, cohortId])
}

model SyncLog {
  id              String   @id @default(uuid())
  timestamp       DateTime @default(now())
  status          String // "SUCCESS", "ERROR"
  message         String
  sessionsCreated Int
}

model RecurringSession {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @map("id")
  cohortId     Int      @map("cohort_id")
  cohortName   String   @map("cohort_name")
  courseId     Int      @map("course_id")
  courseName   String   @map("course_name")
  dayOfWeek    Int      @map("day_of_week") // 0=Mon, 4=Fri
  period       Int      @map("period")
  startDate    DateTime @map("start_date")
  endDate      DateTime @map("end_date")
  description  String   @default("regular class") @map("description")
  createdAt    DateTime @default(now()) @map("created_at")

  @@index([cohortId, startDate, endDate], map: "idx_recurring_sessions_cohort_dates")
  @@map("recurring_sessions")
}

model SessionInstance {
  id                  String    @id @default(dbgenerated("gen_random_uuid()"))
  recurringSessionId  String?   @map("recurring_session_id")
  cohortId            Int       @map("cohort_id")
  courseId            Int       @map("course_id")
  sessionDate         DateTime  @map("session_date") @db.Date
  period              Int       @map("period")
  moodleSessionId     Int?      @map("moodle_session_id")
  createdAt           DateTime  @default(now()) @map("created_at")

  @@unique([cohortId, courseId, sessionDate, period])
  @@index([cohortId, sessionDate, period], map: "idx_session_instances_lookup")
  @@map("session_instances")
}
